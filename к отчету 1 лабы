        "CREATE TABLE clients (\n",
        "    client_id INT AUTO_INCREMENT PRIMARY KEY,\n",
        "    company_name VARCHAR(255) NOT NULL,\n",
        "    phone VARCHAR(50)\n",
        ");\n",
        "CREATE TABLE deals (\n",
        "    deal_id INT AUTO_INCREMENT PRIMARY KEY,\n",
        "    client_id INT,\n",
        "    deal_name VARCHAR(255) NOT NULL,\n",
        "    amount DECIMAL(15, 2),\n",
        "    stage VARCHAR(100),\n",
        "    FOREIGN KEY (client_id) REFERENCES clients(client_id)\n",
        ");\n",
        "INSERT INTO clients (company_name, phone) VALUES\n",
        "('ООО \"Вектор\"', '+7 (495) 111-22-33'),\n",
        "('АО \"СтройТех\"', '+7 (812) 444-55-66'),\n",
        "('ИП Иванов', '+7 (351) 777-88-99'),\n",
        "('ЗАО \"Инновация\"', NULL);\n",
        "INSERT INTO deals (client_id, deal_name, amount, stage) VALUES\n",
        "(1, 'Поставка ноутбуков', 120000.00, 'Успешно закрыта'),\n",
        "(2, 'Ремонт офиса', 45000.00, 'Переговоры'),\n",
        "(1, 'Обслуживание оргтехники', 75000.50, 'В работе'),\n",
        "(3, 'Разработка сайта', 30000.00, 'Выполнено'),\n",
        "(4, 'Закупка ПО', 200000.00, 'Оплачена');\n",
        "\n",
        "SELECT\n",
        "    d.deal_id,\n",
        "    c.company_name,\n",
        "    d.deal_name,\n",
        "    d.amount,\n",
        "    d.stage\n",
        "FROM deals d\n",
        "JOIN clients c ON d.client_id = c.client_id\n",
        "WHERE d.amount > 50000;"
      ]
    }
  ]
}